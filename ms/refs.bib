@article{Sage_Kubien_2007,
author = {Sage, Rowan F. and Kubien, David S.},
title = {The temperature response of {C}$_3$ and {C}$_4$ photosynthesis},
journal = {Plant, Cell \& Environment},
volume = {30},
number = {9},
